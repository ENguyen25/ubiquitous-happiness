{{!-- {{log 'this' forumPosts}} --}}
<class class="container">
    <section class="header">
        <h1 class="forum-title">{{forumPosts.title}}</h1>
        <a href="/profile/{{forumPosts.author_id}}">
            <h3 class="author-id">{{forumPosts.author}}</h3>
        </a>
    </section>

    <section class="entry">
        <p class="forum-entry">{{forumPosts.entry}}</p>
    </section>

    <section class="comments">
    {{> comments}}
    </section>
</class>

<a href="/forum/new-post">
    <button class="create-new-post">Add Post</button>
</a>
<a href="/forum">
    <button class="back-button">Back</button>
</a>
