{{!-- // Home page carousel and game banners --}}
<section class="hero">   
  <div id="herosel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
    {{#each games as |game|}}
      {{#if game.is_banner}}
        {{> home-button-nav }}
      {{/if}}
    {{/each}}
    </div>
    <div class="carousel-inner">
      {{#each games as |game|}}
        {{#if game.is_banner}}
          {{> home-banner }}
        {{/if}}
      {{/each}}
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#herosel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#herosel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</section>

<section class="twitch text-center">
  <img class="section-header" src="/images/trending-streams.png">
  <div class="twitch-card-container">
    {{#each games as |game|}}
      {{#unless game.is_banner}}
        {{> twitch-cards }}
      {{/unless}}
    {{/each}}
  </div>
</section>



<section class="forum-advert text-center">
    <img class="section-header" src="/images/what-the-blog.png">
    <img class="forum-ad-gif" src="/images/forum-advert.gif">
</section>


